<article class="post">
  <div class="title">
    <h5>{{title}}</h5>
    <span>({{post_text}})</span>
  </div>
  <div class="meta">
    Written by {{user.username}} on {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>